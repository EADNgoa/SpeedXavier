@using Speedbird
@model Speedbird.RailDaily

<div class="row">
    <div class="col-12">
        <table class="SRDetsTbl">
            <thead>
                <tr>
                    <th>Folder No</th>
                    <th>Booked On</th>
                    <th>Pax Name</th>
                    <th>Pax No</th>
                    <th>Agent</th>
                    <th>Age</th>
                    <th>Date of travel</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Bus Name</th>
                    <th>Bus No</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Class</th>
                    <th>Booking Type</th>
                    <th>Ticket No</th>
                    <th>Ticket Cost</th>
                    <th>Additional Cost</th>
                    <th>Additional Details</th>
                    <th>CP</th>
                    <th>Sell Price</th>
                    <th>COM</th>
                </tr>
            </thead>
            <tr>
                <td>@Model.BookingNo</td>
                <td>@Model.TDate.EAFormat(withTime: false)</td>
                <td>@Model.PaxName</td>
                <td>@Model.PaxNo</td>
                <td>@Model.ContactName</td>
                <td>@Model.Age</td>
                <td>@Model.DOT.EAFormat()</td>
                <td>@Model.FromLoc</td>
                <td>@Model.ToLoc</td>
                <td>@Model.TrainName</td>
                <td>@Model.TrainNo</td>
                <td>@Model.Arrival.EAFormat(true)</td>
                <td>@Model.Departure.EAFormat(true)</td>
                <td>@Model.Class</td>
                <td>@((BookingTypeEnum)Model.CarType)</td>
                <td>@Model.TicketNo</td>
                <td align="right">@Model.Cost</td>
                <td align="right">@Model.AddCost</td>
                <td>@Model.AdditionalDetails</td>
                <td align="right">@Model.TotalCost</td>
                <td align="right">@Model.SellPrice</td>
                <td align="right">@(Model.SellPrice - Model.TotalCost)</td>
            </tr>
            <tr>
                Note
            </tr>
            <tr>
                <td>@Model.Event</td>
            </tr>
        </table>
    </div>
</div>


<script>


    $(function () {
        //DateTime picker


        $('.eadate').datepicker({
            dateFormat: "dd-MM-yy",
            showButtonPanel: true,
            changeMonth: true,
            changeYear: true
        });

        //Disable the browsers default date picker
        jQuery.validator.methods["date"] = function (value, element) { return true; }


    });




</script>
