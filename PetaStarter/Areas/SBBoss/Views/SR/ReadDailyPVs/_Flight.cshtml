@using Speedbird
@model Speedbird.FlightServiceDaily

<div class="row">
    <div class="col-12">
        <table class="SRDetsTbl SRDetsFullTable" width="100%">
            <thead>
                <tr>
                    <th>Folder No</th>
                    <th>Booked On</th>
                    <th>Pax Name</th>
                    <th>Pax No</th>
                    <th>Agent,Agency,Conatct</th>
                    <th>Adult Qty              </th>
                    <th>Child Qty              </th>
                    <th>Infant Qty             </th>
                    <th>Intnl/ Dom      </th>
                    <th>From                 </th>
                    <th>To                   </th>
                    <th>Class                </th>
                    <th>Airline Code         </th>
                    <th>Flight No             </th>
                    <th>Departure On          </th>
                    <th>Arrival On            </th>
                    <th>Ticket No.             </th>
                    <th>GDSConf No.            </th>
                    <th>Airline PNR           </th>
                    <th>Extra                </th>
                    <th>Extra Details         </th>
                    <th>CP        </th>
                </tr>

            </thead>
            <tr>
                <td>@Model.BookingNo</td>
                <td>@Model.TDate.EAFormat(withTime: false)</td>
                <td>@Model.PaxName</td>
                <td>@(Model.AdultNo + Model.ChildNo + Model.InfantNo)</td>
                <td>@Model.ContactName,@Model.Agency,@Model.PhoneNo</td>
                <td>@Model.AdultNo</td>
                <td>@Model.ChildNo </td>
                <td>@Model.InfantNo </td>
                <td>@Model.IsInternational </td>
                <td>@(Model.FromLoc.ToUpper()) </td>
                <td>@(Model.ToLoc.ToUpper()) </td>
                <td>@Model.Class </td>
                <td>@Model.AirlineCode </td>
                <td>@Model.FlightNo</td>
                <td>@Model.DepartureOn.EAFormat(true) </td>
                <td>@Model.ArrivalOn.EAFormat(true) </td>
                <td>@Model.TicketNo </td>
                <td>@Model.GDSConfNo</td>
                <td>@Model.AirlinePNR</td>
                <td>@Model.Extra </td>
                <td>@Model.ExtraDetails </td>
                <td align="right">@Model.TotalCost.EAFormat() </td>
            </tr>
            <tr>
                <th>Sell Price</th>
                <th>COM</th>
            </tr>
            <tr>
                <td align="right">@Model.SellPrice.EAFormat() </td>
                <td align="right">@Model.Commision.EAFormat()</td>
            </tr>
        </table>
        <div class="row">
            <div class="col-2 text-center">
                <strong>Note</strong>
            </div>
            <div class="col-10 text-center">
                @{
                    var Logs = (IEnumerable<SRlog>)ViewBag.Logs;
                }

                @foreach (var item in Logs)
                {
                    <ul>
                        <li>@item.Event</li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<br />



