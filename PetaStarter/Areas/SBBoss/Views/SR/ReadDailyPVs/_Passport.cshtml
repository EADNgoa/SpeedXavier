@using Speedbird
@model Speedbird.PassportDaily

<div class="row">
    <div class="col-12">
        <table class="SRDetsTbl SRDetsFullTable" width="100%">
            <thead>
                <tr>
                    <th>Folder No</th>
                    <th>Booked On</th>
                    <th>Pax Name</th>
                    <th>Pax No</th>
                    <th>Agent</th>
                    <th>DOB</th>
                    <th>Passport No.</th>
                    <th>Nationality</th>
                    <th>Service Required</th>
                    <th>Cost</th>
                    <th>CP</th>
                    <th>Sell Price</th>
                    <th>COM</th>
                </tr>
            </thead>
            <tr>
                <td>@Model.BookingNo</td>
                <td>@Model.TDate.EAFormat(withTime: false)</td>
                <td>@Model.PaxName</td>
                <td>@Model.PaxNo</td>
                <td>@Model.ContactName @Model.Agency @Model.PhoneNo</td>
                <td>@Model.Fdate.EAFormat()</td>
                <td>@Model.PassPortNo </td>
                <td>@Model.Nationality</td>
                <td>@Model.Heritage</td>
                <td align="right">@Model.Cost.EAFormat() </td>
                <td>@Model.TotalCost.EAFormat() </td>
                <td>@Model.SellPrice.EAFormat() </td>
                <td>@Model.COM.EAFormat()</td>
            </tr>
            <tr>
                <th>Note</th>
            </tr>
            <tr>
                <td>@Model.Event</td>
            </tr>
        </table>
    </div>
</div>

<br />



