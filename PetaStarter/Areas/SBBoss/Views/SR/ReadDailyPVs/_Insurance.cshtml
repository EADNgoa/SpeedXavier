@using Speedbird
@model Speedbird.InsuranceDaily
<div class="row">
    <div class="col-12">
        <table class="SRDetsTbl">
            <thead>
                <tr>
                    <th>Folder No</th>
                    <th>Booked On</th>
                    <th>Pax Name</th>
                    <th>Pax No</th>
                    <th>Agent</th>
                    <th>DOB</th>
                    <th>Today Date</th>
                    <th>Destination</th>
                    <th>Policy Name</th>
                    <th>Policy type</th>
                    <th>No Of Days</th>
                    <th>Valid From</th>
                    <th>Valid To</th>
                    <th>Net Cost</th>
                    <th>CP</th>
                    <th>Sell Price</th>
                    <th>COM</th>
                </tr>
            </thead>
            <tr>
                <td>@Model.BookingNo</td>
                <td>@Model.TDate.EAFormat(withTime: false)</td>
                <td>@Model.PaxName</td>
                <td>@Model.PaxNo</td>
                <td>@Model.ContactName @Model.Agency @Model.PhoneNo</td>
                <td>@Model.DOB.EAFormat()</td>
                <td>@DateTime.Today</td>
                <td>@Model.Destination</td>
                <td>@Model.PolicyName</td>
                <td>@Model.PolicyType</td>
                <td>@Model.NoOfDays</td>
                <td>@Model.ValidFrom.EAFormat()</td>
                <td>@Model.ValidTo.EAFormat()</td>
                <td align="right">@Model.Cost</td>
                <td align="right">@Model.TotalCost</td>
                <td align="right">@Model.SellPrice</td>
                <td align="right">@(Model.SellPrice - Model.TotalCost)</td>
            </tr>
            <tr>
                <th>Note</th>
            </tr>
            <tr>
                <td>@Model.Event</td>
            </tr>
        </table>
    </div>
</div>

    <script>


        $(function () {
            //DateTime picker

            $('.eadate').datepicker({
                dateFormat: "dd-MM-yy",
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });

            //Disable the browsers default date picker
            jQuery.validator.methods["date"] = function (value, element) { return true; }


        });




    </script>
