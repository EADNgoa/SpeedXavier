@using Speedbird
@model Speedbird.CruiseDaily
<div class="row">
    <div class="col-12">
        <table class="SRDetsTbl">
            <thead>
                <tr>
                    <th>Folder No</th>
                    <th>Booked On</th>
                    <th>Pax Name</th>
                    <th>Pax No</th>
                    <th>Agent,Agency,Conatct</th>
                    <th>Dept. Date</th>
                    <th>No. of Cabins</th>
                    <th>Cabin type</th>
                    <th>From Port</th>
                    <th>Via Point</th>
                    <th>To Port</th>
                    <th>Return Date</th>
                    <th>No. of Nights</th>
                    <th>Meal Plan</th>
                    <th>Net cost/person</th>
                    <th>Name od cruise trip</th>
                    <th>CP</th>
                    <th>Sell Price</th>
                    <th>COM</th>
                </tr>

            </thead>
            <tr>
                <td>@Model.BookingNo</td>
                <td>@Model.TDate.EAFormat(withTime: false)</td>
                <td>@Model.PaxName</td>
                <td>@Model.Passengers.EAFormat()</td>
                <td>@Model.ContactName,@Model.Agency,@Model.PhoneNo</td>
                <td>@Model.Departuredate.EAFormat()</td>
                <td>@Model.Cabins</td>
                <td>@Model.CabinType</td>
                <td>@Model.FromPort</td>
                <td>@Model.ViaPoint</td>
                <td>@Model.ToPort</td>
                <td>@Model.ReturnDate.EAFormat()</td>
                <td>@(Model.ReturnDate.Subtract(Model.Departuredate).TotalDays)</td>
                <td>@Model.MealPlan</td>
                <td align="right">@Model.DinnerCost</td>
                <td>@Model.CruiseName</td>
                <td align="right">@Model.TotalCost.EAFormat() </td>
                <td align="right">@Model.SellPrice.EAFormat() </td>
                <td align="right">@Model.COM.EAFormat()</td>
            </tr>
            <tr>
                <th>Note</th>
            </tr>
            <tr>
                <td>@Model.Event</td>
            </tr>
        </table>
    </div>
</div>
<br />

