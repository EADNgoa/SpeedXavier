@model  Speedbird.ServiceRequestDets
<style>
    .table {
        width: 100%;
    }
</style>
@if (Model != null)
{
    <div class="alert alert-secondary">
    <table class="table table-sm table-dark">
        <tr>
            <th>
                Booking No.
            </th>
            <th>
                Booking Date.
            </th>
            <th>
                Status
            </th>
            <th>
                Emp. Name
            </th>
            <th>
                Agent Name
            </th>
            <th>
                Request Source
            </th>
        </tr>
        <tr>
            <td>
                @Model.BookingNo
            </td>
            <td>
                @Model.DT
            </td>
            <td>
                @((Speedbird.SRStatusEnum) Model.SRStatusID)
            </td>
            <td>
                @Model.UserName
            </td>
            <td>
                @Model.AgentName
            </td>
            <td>
                @((Speedbird.EnquirySourceEnum)Model.EnquirySource)
            </td>
        </tr>
    </table>
</div>
}

