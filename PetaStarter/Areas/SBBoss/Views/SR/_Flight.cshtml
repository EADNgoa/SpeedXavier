@model Speedbird.SRdetail
    <style>
        input[type="checkbox"] {
            width: 20px; /*Desired width*/
            height: 20px; /*Desired height*/
           
        }
    </style>
<fieldset @ViewBag.IsReadOnly>
    @Html.Hidden("ParentID")
  
