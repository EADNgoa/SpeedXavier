            <div id="TabContent">
                @if (ViewBag.mode == 1)
                { @Html.Action("FetchDetails", "Package", new { id = (int)ViewBag.PackageId, sid = (int)ViewBag.sid }) }

                @if (ViewBag.mode == 2)
                { @Html.Action("PackPrice", "Package", new { id = (int)ViewBag.PackageId, sid = (int)ViewBag.sid, EID = (int)ViewBag.EID }) }
            </div>
