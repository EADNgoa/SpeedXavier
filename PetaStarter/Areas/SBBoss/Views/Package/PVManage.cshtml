@model Speedbird.PackageValidity

@{
    ViewBag.Title = $"Manage Package Validity";
}


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h5"> Details</span>
        <a href="@Url.Action("Manage","Package",new {id=ViewBag.Pack.PackageID,sid=(int)ViewBag.Pack.ServiceTypeID})"><i class="fas fa-undo-alt fa-inverse h3 float-right DropShadow"></i></a>

    </div>
    <div class="card-body">
        <h5 class="card-title">&nbsp;</h5>
       <table class="table section-to-print " width="70%">
            <tr>
                @if (ViewBag.Pack.ServiceTypeID == 1)
                {
                <td>Package Name</td>
                }
                else if (ViewBag.Pack.ServiceTypeID == 2)
                {
                <td>Cruise Name</td>
                }
                else if (ViewBag.Pack.ServiceTypeID == 3)
                {
                <td>Sight Seeing</td>
                }
                <td>@ViewBag.Pack.PackageName</td>
            </tr>

            <tr>
                <td>Duration</td>
                <td>@ViewBag.Pack.Duration</td>
            </tr>
              @if (ViewBag.Pack.ServiceTypeID == 1)
                {
                 <tr>
                <td>Group Size</td>
                <td>@ViewBag.Pack.GroupSize</td>
            </tr>
                }
          

        </table>
    </div>
</div>


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">@ViewBag.Title</span>
    </div>
    <div class="card-body">
        <h5>&nbsp;</h5>
        <div class="section-to-Not-print">
       @using (Html.BeginForm("PVManage", "Package", FormMethod.Post))
       {
            @Html.AntiForgeryToken()

            <div class="form-horizontal ">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Hidden("PackageID", (int)ViewBag.Pack.PackageID)

                <div class="form-group">
                    @Html.LabelFor(model => model.ValidFrom, "Validity From", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ValidFrom, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ValidFrom, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ValidTo, "Validity To", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ValidTo, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ValidTo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    }
        </div>
       <br />
        

        <hr />
        <table class="table section-to-print index-css" width="100%">
            <tr>
                <th>From </th>

                <th>To </th>
                <th class="section-to-Not-print"></th>
            </tr>
        @foreach(var item in(IEnumerable<Speedbird.PackageValidity>)ViewBag.Validity)
        {
            <tr>
                <td>
                    @($"{item.ValidFrom:dd/MMM/yyyy}")
                </td>
                <td>
                    @($"{item.ValidTo:dd/MMM/yyyy}")                    
                </td>
                <td>
                    <a href="@Url.Action("PVManage","Package",new {EID = item.PVId})">EDIT</a>
                </td>
            </tr>
        }
          
        </table>
   
   
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
