@model Speedbird.PictureDets

@{
    ViewBag.Title = $"Manage Images";
}




<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h5">Package Details</span>
        <a href="@Url.Action("Manage","Package",new {id=ViewBag.Pack.PackageID })"><i class="fas fa-undo-alt fa-inverse h3 float-right DropShadow"></i></a>

    </div>
    <div class="card-body">
        <h5 class="card-title">&nbsp;</h5>
        <table class="table section-to-print " width="70%">
            <tr>
                @if (ViewBag.Pack.ServiceTypID == 1)
                {
                <td>Package Name</td>
                }
                else if (ViewBag.Pack.ServiceTypID == 2)
                {
                <td>Cruise Name</td>
                }
                else if (ViewBag.Pack.ServiceTypID == 3)
                {
                <td>Sight Seeing</td>
                }
                <td>@ViewBag.Pack.PackageName</td>
            </tr>

            <tr>
                <td>Duration</td>
                <td>@ViewBag.Pack.Duration</td>
            </tr>
              @if (ViewBag.Pack.ServiceTypID == 1)
                {
                 <tr>
                <td>Group Size</td>
                <td>@ViewBag.Pack.GroupSize</td>
            </tr>
                }
          

        </table>
    </div>
</div>


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">@ViewBag.Title</span>
    </div>
    <div class="card-body">
        <h5>&nbsp;</h5>
        <div class="section-to-Not-print">
       @using (Html.BeginForm("PackPicture", "Package", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
            @Html.AntiForgeryToken()

            <div class="form-horizontal ">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Hidden("ServiceID", (int)ViewBag.Pack.PackageID)
                @Html.Hidden("ServiceTypeID", (int)Speedbird.ServiceTypeEnum.Packages)


                <div class="form-group">
                    @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="UploadedFile" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    }
        </div>
       <br />
        

        <hr />
        <table class="table section-to-print index-css" width="100%">
            <tr>
                <th>Image</th>
                

                <th class="section-to-Not-print"></th>
            </tr>
        @foreach(var item in ViewBag.Pics)
        {
            <tr>
                <td>
                   <img src="/Images/@item.PictureName" />
                </td>
                <td>
                    <a href="@Url.Action("Delete","Package",new {sid=item.ServiceID,pid=item.PictureID})">Delete</a>
                </td>
            </tr>
        }
          
        </table>
   
   
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
