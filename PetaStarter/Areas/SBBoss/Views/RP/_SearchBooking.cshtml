<table class="table table-striped">
    <thead>Amount Used:@ViewBag.AmtUsed</thead>
    <tr class="bg-primary rounded">
        <td style="float:right">Enter Customer Name:</td>
        <th>
            @Html.Editor("CustName", new { htmlAttributes = new { @class = "form-control " } })
        </th>
        <td style="float:right">Enter Agent Name:</td>

        <th>
            @Html.Editor("AgentName", new { htmlAttributes = new { @class = "form-control w" } })

        </th>
        <td></td>
    </tr>
    <tr class="bg-secondary">

        <th>
            Booking No
        </th>
        <th>
            Name
        </th>
        <th>
            Total Amount
        </th>
        <th>
            Current Payment
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in (IEnumerable<Speedbird.SRBooking>)ViewBag.Bookings)
    {
        <tr>

            <td>
                @item.SRID
            </td>
            <td>
                @if (item.cName != null)
                {
                    @: @item.cName
                }
                @if (item.UserName != null)
                {
                    @: @item.UserName
                }
            </td>
            <td>
                @(item.OA - item.PaidAmt )
            </td>
            <td>
                <input name="Amt" type="text" class="form-control" data-save="@item.SRID" />
            </td>
            <td>
                <div class="form-row">


                    <div class="input-group col mb-3 fa-pull-right">
                        <button type="button" class="btn btn-primary SavePayment" name="SavePayment" data-srid="@item.SRID" data-oa="@item.OA">Save</button>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>


<script>
    $("#CustName,#AgentName").keyup(function () {

        var cn = $('#CustName').val();
        var an = $('#AgentName').val();


        if (cn.length == 5 || an.length == 5) {
            $('.searchBK').html(" ");
            $('.searchBK').load("/SBBoss/RP/Reciept?CustName=" + cn + "&&AgentName=" + an + "&&IsSearch=" + true);
        }
    });


</script>


<script>
        $('.SavePayment').click(function () {
            var srid = $(this).data('srid');
            var oa = $(this).data('oa');
            var ManAmt = $('input[data-save="' + srid + '"]').val();
            var ta = $("#Amount").val();
            $("#SRID").val(srid);
            $("#OA").val(oa);
            $("#ManAmt").val(ManAmt);
            $("#TotalAmt").val(ta);

            var detFrm = $('#AssignPay');

        if (typeof(detFrm[0]) == 'object')
        {

            $.ajax({

        url: '@Url.Action("Reciept", "RP")',
        type: 'post',
        data: $(detFrm).serialize(),
        success: function () {

                        window.location.assign('@Url.Action("Reciept")');
                }
            });
        }
    });
</script>