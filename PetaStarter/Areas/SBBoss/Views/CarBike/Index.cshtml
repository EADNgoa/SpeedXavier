@model PagedList.IPagedList<Speedbird.CarBikeDets>

@using PagedList.Mvc;
@{
    ViewBag.Title = "Cars and Bikes";
}


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h5">Search</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">&nbsp;</h5>
        @using (Html.BeginForm("Index", "CarBike", FormMethod.Get))
        {
            <div class="row d-print-none">
                <table>
                    <tr style="text-align:center">
                        <td>&nbsp;Car/Bike Name:</td>
                        <td> @Html.TextBox("AN", ViewBag.CurrentFilter as string, new { @class = "form-control" })</td>
                        <td><input type="submit" value="Search" class="btn btn-primary" /></td>
                    </tr>
                </table>

            </div>
        }
    </div>
</div>


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">@ViewBag.Title</span>
        <a href="@Url.Action("Manage","CarBike")"><i class="fas fa-plus-circle fa-inverse h3 float-right DropShadow"></i></a>
    </div>
    <div class="card-body">
        <h5>&nbsp;</h5>
        <table class="table">
            <tr>
                <th>Sr No</th>
                <th>
                    Car/Bike Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Description
                </th>
                <th>
                    No Pax
                </th>
                <th>
                    No Of Small Bags
                </th>
                <th>
                    No Of Large Bags
                </th>
                <th>
                    Ac
                </th>
                <th>
                   Carrier
                </th>
                <th>
                    Helmet
                </th>
                <th></th>
            </tr>
            @{int i = 1;}
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarBikeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeoTreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoPax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoSmallBags)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoLargeBags)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasAc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasCarrier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InclHelmet)
                </td>
                <td>
                    <a href="@Url.Action("Manage","CarBike", new {id = item.CarBikeID })"><i title="Edit" class="fas fa-edit fa-inverse h3 float-right DropShadow"></i></a>
                </td>
            </tr>
                i++;
            }

        </table>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                  new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

    </div>
</div>



