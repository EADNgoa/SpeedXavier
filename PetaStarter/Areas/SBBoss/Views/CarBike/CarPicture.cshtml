@model Speedbird.PictureDets

@{
    ViewBag.Title = $"Manage Images";
}




<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h5">Car/Bike Details</span>
        <a href="@Url.Action("Manage","CarBike",new {id=ViewBag.CarBike.CarBikeID })"><i class="fas fa-undo-alt fa-inverse h3 float-right DropShadow"></i></a>

    </div>
    <div class="card-body">
        <h5 class="card-title">&nbsp;</h5>
        <table class="table section-to-print " width="70%">
            <tr>
                <td>Car/Bike Name</td>
                <td>@ViewBag.CarBike.CarBikeName</td>
            </tr>

            <tr>
                <td>Ac</td>
                <td>@ViewBag.CarBike.HasAc</td>
            </tr>
            <tr>
                <td>Carrier</td>
                <td>@ViewBag.CarBike.HasCarrier</td>
            </tr>

        </table>
    </div>
</div>


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">@ViewBag.Title</span>
    </div>
    <div class="card-body">
        <h5>&nbsp;</h5>
        <div class="section-to-Not-print">
       @using (Html.BeginForm("CarPicture", "CarBike", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
            @Html.AntiForgeryToken()

            <div class="form-horizontal ">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Hidden("ServiceID", (int)ViewBag.CarBike.CarBikeID)
                @Html.Hidden("ServiceTypeID", (int)Speedbird.ServiceTypeEnum.CarBike)


                <div class="form-group">
                    @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="UploadedFile" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    }
        </div>
       <br />
        

        <hr />
        <table class="table section-to-print index-css" width="100%">
            <tr>
                <th>Image</th>
                

                <th class="section-to-Not-print"></th>
            </tr>
        @foreach(var item in ViewBag.Pics)
        {
            <tr>
                <td>
                   <img src="/Images/@item.PictureName" />
                </td>
                <td>
                    <a href="@Url.Action("Delete","CarBike",new {CarID=item.ServiceID,pid=item.PictureID})">Delete</a>
                </td>
            </tr>
        }
          
        </table>
   
   
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
