@model Speedbird.Models.BKPayVM
@if (ViewBag.Mode == (int)Speedbird.PayToEnum.Driver)
{
<tr>
    @Html.Hidden("SRDID", Model.SRDID)
    @Html.Hidden("mode", (int?)ViewBag.Mode)
    <td>@Model.BookingNo</td>
    <td>@Model.PaxName</td>
    <td>@Model.Fdate</td>
    <td>@Model.Cost</td>
    <td>@Model.SellPrice</td>
    @if (Model.PaymentID == null)
    {
        <td><input type="checkbox" class="checktotal" name='SelectedSRDID_@ViewData["side"]' value="@Model.SRDID" data-moneyval="@(Model.SellPrice - Model.Cost)" /></td>
    }
    else
    {
        <td></td>
    }
</tr>
}
