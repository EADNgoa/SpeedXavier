@model Speedbird.PictureDets

@{
    ViewBag.Title = $"Manage Images";
}
<style>
    a{
        color:red
    }
    img{
        width:150px;
        height:150px;
    }
</style>



<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">Accomomdation Details</span>
        <a href="@Url.Action("Manage","Accomodation",new {id=ViewBag.Accom.AccomodationID })"><i class="fas fa-undo-alt fa-inverse h3 float-right DropShadow"></i></a>

    </div>
    <div class="card-body">
        <h5 class="card-title">&nbsp;</h5>
        <table class="table section-to-print " width="70%">
            <tr>
                <td>Accomodation Name</td>
                <td>@ViewBag.Accom.AccomName</td>
            </tr>

            <tr>
                <td>Latitude</td>
                <td>@ViewBag.Accom.lat</td>
            </tr>
            <tr>
                <td>Longitude</td>
                <td>@ViewBag.Accom.longt</td>
            </tr>
       
        </table>
    </div>
</div>


<div class="card border rounded DropShadow">
    <div class="position-absolute text-center rounded DropShadow" id="EAcardTitle">
        <span class="h3">@ViewBag.Title</span>
    </div>
    <div class="card-body">
        <h5>&nbsp;</h5>
        <div class="section-to-Not-print">
       @using (Html.BeginForm("Picture", "Accomodation", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
            @Html.AntiForgeryToken()

            <div class="form-horizontal ">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Hidden("ServiceID", (int)ViewBag.Accom.AccomodationID)
                @Html.Hidden("ServiceTypeID", (int)Speedbird.ServiceTypeEnum.Accomodation)


                <div class="form-group">
                    @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="UploadedFile" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }
        </div>
       <br />
        

        <hr />
        <table class="table section-to-print" width="100%">
            <tr>
                <th>Image</th>
                

                <th class="section-to-Not-print"></th>
            </tr>
        @foreach(var item in ViewBag.Pics)
        {
            <tr>
                <td>
                   <img src="/Images/@item.PictureName" />
                </td>
                <td>
                    <a href="@Url.Action("Delete","Accomodation",new {sid=item.ServiceID,pid=item.PictureID})">Delete</a>
                </td>
            </tr>
        }
          
        </table>
   
   
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
