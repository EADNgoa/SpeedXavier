
@model  Speedbird.AccomodationDets

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img class="d-block img-fluid " src="/Images/@Model.pic.FirstOrDefault().PictureName" alt="First slide">
        </div>
        @{bool f = true;}
        @foreach (var i in Model.pic)
        {

            if (f == false)
            {
                <div class="carousel-item">
                    <img class="d-block img-fluid " src="/Images/@i.PictureName" alt="First slide">
                </div>
            }

            f = false;
        }


    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="DetailBlock">
                <h4>Description</h4>
                @Model.Description
            </div>
        </div>
       


