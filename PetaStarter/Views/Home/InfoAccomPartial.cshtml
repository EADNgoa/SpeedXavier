
@model  Speedbird.AccomodationDets

<style>
    #map {
        height: 400px;
        width: 90%;
        margin-left: 30px;
    }
</style>

<div class="col-8">

    <h2 style="margin-left:60px;">@Model.AccomName</h2>
    <br />
    <div class="DetailBlock">
        <div class="row">
            <table class="table">
                <tr>
                    <td class="desc">
                        <i class="material-icons" style="color:#009de0;">&#xe25f;</i>   @Model.AccomName Description
                    </td>
                </tr>
                <tr>
                    <td style="color:#11496d;">
                        @Html.Raw(Model.Description)
                    </td>
                </tr>
            </table>
        </div>

    </div>
    <div class="DescriptionBlock">
        <div class="row">
            <table class="table">
                <tr>
                    <td class="desc">
                        <i style="font-size:24px" class="fa">&#xf036;</i>   Facilities
                        <br />
                        <ul>
                            @foreach (var item in ViewBag.facs)
                            {
                                <li>@item.FacilityName</li>
                            }
                        </ul>
                    </td>
                </tr>


            </table>
        </div>

    </div>

    <div class="desc">
        <i style="font-size:24px; margin-left:30px;" class="fa">&#xf302;</i>   Images
        <div id="blueimp-gallery" class="blueimp-gallery">
            <div class="slides"></div>
            <h3 class="title"></h3>
            <a class="prev" style="color:wheat">‹</a>
            <a class="next" style="color:white">›</a>
            <a class="close" style="color:wheat">×</a>
            <a class="play-pause"></a>
            <ol class="indicator"></ol>
        </div>
        <div id="links" style="margin-left:30px;">
            @foreach (var item in Model.pic)
            {
                <a href="/Images/@item.PictureName" title="@Model.AccomName">
                    <img height="200px;" src="/Images/@item.PictureName" alt="@Model.AccomName">
                </a>
            }
        </div>
    </div>
    <br />

    <div class="desc">
        <i style="font-size:24px; margin-left:30px;" class="fa">&#xf279;</i>   Location Map
        <div id="map" width="80%"></div>
    </div>

</div>

<script>

    function initMap() {
        var uluru = { lat: @Model.Lat, lng: @Model.longt };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }



</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAC6Yyjmk9tLMPEe6ID2rmzwcYPCHKYrZU&callback=initMap">
</script>


