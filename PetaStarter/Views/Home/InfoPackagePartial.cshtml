
@model  Speedbird.PackageDets

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

       
        @{bool f = true;}
        @foreach (var i in Model.Pic)
        {

            if (f == true)
            {
             <div class="carousel-item active">
                <img class="d-block img-fluid " src="/Images/@i.PictureName" alt="First slide">
            </div>
            }
            else
            {
            <div class="carousel-item">
                <img class="d-block img-fluid " src="/Images/@i.PictureName" alt="First slide">
            </div>
            }
            f = false;
        }


    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <h2 style="margin-left:60px;">@Model.PackageName</h2>
                <div class="DetailBlock">
                    <div class="row">
                        <table class="table">
                            <tr>
                                <td class="desc">Description</td>
                            </tr>
                            <tr>
                                <td>
                                    @Model.Description
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
                <div class="DetailBlock">
                    <div class="row">
                        <table class="table">
                            <tr>
                                <td class="desc" colspan="2">Package Details</td>
                            </tr>
                            <tr>
                                <td>
                                    Start Time
                                </td>
                                <td>
                                    @Model.StartTime
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Duration
                                </td>
                                <td>
                                    @Model.Duration
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Difficuty
                                </td>
                                <td>
                                    @Model.Dificulty/10
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Group Size
                                </td>
                                <td>
                                    @Model.GroupSize/10
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Guide Languages
                                </td>
                                <td>
                              @foreach (var i in Model.Glang)
                               {
                                     @i.GuideLanguageName
                               }
                                </td>
                            </tr>


                            <tr>
                                <td>
                                    Itinerary
                                </td>
                                <td>
                                    @Model.Itinerary
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Inclusion
                                </td>
                                <td>
                                    @Model.Inclusion
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   Exclusion
                                </td>
                                <td>
                                    @Model.Exclusion
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    Highlights
                                </td>
                                <td>
                                    @Model.Highlights
                                </td>
                            </tr>

                        </table>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <div class="row">
                &nbsp;
            </div> 
        </div>
       


