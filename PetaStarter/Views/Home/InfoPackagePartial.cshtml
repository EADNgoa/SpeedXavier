<style>
    .EATranspHeader {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding-left:15px;
    }
    .EAUpMovedDiv {
        position:relative;
        top:-243px;
    }

    .EATitle {
        font-family: "Merriweather Sans", serif;
        font-size: 36px;
        font-weight:700;
        letter-spacing:-1px;
        line-height: 44px;
        padding-top: 51px;
        margin-bottom:5px;
        font-variant:small-caps;
    }

    .EAIconText {
        font-variant: small-caps;
        font-family: "Merriweather Sans", serif;
        color: white;
        font-size: 18px;
    }
</style>
@model  Speedbird.PackageDets


    
        <div class="col-5 EAUpMovedDiv">
            <div class="EATranspHeader">
                <h1 class="EATitle">@Model.PackageName</h1>
                <div class="FloatBadge">
                    @Model.GeoName
                </div>
                <hr style="background-color:white; border:1px solid white; margin:3px;"/>
                @foreach(var i in ViewBag.Icns)
                {
                    <img src="/Icons/@i" height="43px;" />
                    <span class="EAIconText">@i.Substring(0, i.IndexOf('.'))</span>
                }
                <hr style="background-color:white; border:1px solid white;margin:3px;"/>
                LANGUAGES:
                @foreach (var item in Model.GuideLanguages)
                {
                    @item.GuideLanguageName
                    @: |
                }
            </div>
                
                <div class="DetailBlock">
                    <div class="row">
                        <table class="table">
                            <tr>
                                <td class="desc">
                                    <i class="material-icons" style="color:#009de0;">&#xe25f;</i>  @Model.PackageName HighLights
                                </td>
                            </tr>                            
                            <tr>
                                <td style="color:#11496d;">
                                    @Html.Raw(Model.Highlights)                                    
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
                <div class="DescriptionBlock">
                    <div class="row">
                        <table class="table">
                            <tr>
                                <td class="desc">
                                    <i style="font-size:24px" class="fa">&#xf036;</i>
                                    Description
                                </td>
                            </tr>
                          
                            <tr>
                                <td>
                                    @Html.Raw(Model.Description)
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>

                <div id="blueimp-gallery" class="blueimp-gallery">
                    <div class="slides"></div>
                    <h3 class="title"></h3>
                    <a class="prev" style="color:wheat">‹</a>
                    <a class="next" style="color:white">›</a>
                    <a class="close" style="color:wheat">×</a>
                    <a class="play-pause"></a>
                    <ol class="indicator"></ol>
                </div>
                <div id="links" style="margin-left:30px;">
                    @foreach (var item in Model.Pic)
                    {
                        <a href="/Images/@item.PictureName" title="@Model.PackageName">
                            <img height="200px;" src="/Images/@item.PictureName" alt="@Model.PackageName">
                        </a>
                    }                    
                </div>
            <br />
            <hr />
            
                <div class="DetailBlock" style="min-height:0;">

                    <div class="row">
                        <div class="row desc d-lg-table-cell" style="padding-left:30px;margin-left:0px;">
                            <i style="font-size:24px" class="fa">&#xf072;</i>
                            Package Details
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-2">
                            <b>Start Time:</b>
                        </div>
                        <div class="col-4">
                            @Html.Raw(Model.StartTime)
                        </div>
                        <div class="col-2">
                            <b>Duration:</b>
                        </div>
                        <div class="col-1">
                            @Html.Raw(Model.Duration) h
                        </div>
                        <div class="col-2">
                            <b>Group Size:</b>
                        </div>
                        <div class="col-1">
                            @Model.GroupSize 
                        </div>
                    </div>
                    <hr />
                    
                    <div class="row">
                        <div class="col-12" style="color: darkblue; font-weight:700">                            
                            Itinerary
                        </div>
                        <div class="col-12">
                            @Html.Raw(Model.Itinerary)
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12" style="color: darkblue; font-weight:700">
                            Inclusions
                        </div>
                        <div class="col-12">
                            @Html.Raw(Model.Inclusion)
                        </div>
                    </div>                    
                    <div class="row">
                        <div class="col-12" style="color: darkblue; font-weight:700">                            
                            Exclusions
                        </div>
                        <div class="col-12">
                            @Html.Raw(Model.Exclusion)
                        </div>
                    </div>
                    <hr />
                    
                </div>

                
            </div>
            