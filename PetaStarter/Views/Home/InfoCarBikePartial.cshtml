                                <td class="desc">
                                    <i style="font-size:24px" class="fa">&#xf036;</i>
                                    Description
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Model.Description
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
                <div class="DetailBlock">
                    <div class="row">
                        <table class="table">
                            <tr>
                                <td class="desc">
                                    <i style="font-size:24px" class="fa">&#xf152;</i>
