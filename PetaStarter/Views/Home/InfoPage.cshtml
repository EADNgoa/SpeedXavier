<div class="comment-section">

    <div class="container-fluid">

        <h2>Comments</h2>

        @if (ViewBag.checkBooking != null)

        {

            using (Html.BeginForm("InfoPage", "Home", FormMethod.Post))

            {

                <div class="form-group">

                    <div class="col-md-10">

                        @Html.Hidden("ServiceID", (int)ViewBag.ServiceID)

                        @Html.Hidden("st", (int)ViewBag.ST)



                        @Html.TextArea("Comment", new { htmlAttributes = new { @class = "form-control" } })
                        <select id="jqStar" name="jqStar">
                            <option value=""></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>

                        <button class="btn btn-success " style="width:180px;height:50px;float:right" type="submit">Submit</button>



                    </div>

                </div>

            }

        }

        <br />
        <br />
        @foreach (var item in Model)

        {

            <div class="media">

                <div class="media-left">

                    <img src="/Images/talk.png" class="media-object" style="width:45px">

                </div>

                <div class="media-body">

                    <h4 class="media-heading">@item.UserName <small><i>Posted on @item.ReviewDate</i></small></h4>

                    <p>@item.Review</p>
                    <select id="Star" name="Star" class="Star" data-val="@item.Value">
                        <option value=""></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>

                    @foreach (var r in item.Replies)

                    {

                        <div class="media">

                            <div class="media-left">

                                <img src="/Images/talk.png" class="media-object" style="width:45px">

                            </div>

                            <div class="media-body">

                                <h4 class="media-heading">@r.UserName <small><i>Posted on @item.ReviewDate</i></small></h4>

                                <p>@r.Reply</p>

                            </div>

                        </div>

                    }

                </div>

            </div>

        }

    </div>



</div>



