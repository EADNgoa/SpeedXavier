@{
    ViewBag.Title = "Reset password confirmation";
}
<style>
    .alink {
        color: lightcyan;
        font-family: 'Times New Roman', Times, serif;
        font-size: 20px;
        font-weight: bolder;
    }

    body {
        background-image: url(/Images/LoginBG.jpeg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    p {
        background: rgba(0, 0, 0,0.7);
    }
</style>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
    <p>
        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: new { @area = "" }, htmlAttributes: new { id = "loginLink" })
    </p>
</div>
